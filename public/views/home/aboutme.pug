section.about-me-section.p-3.p-lg-5.theme-bg-light
    div.container
        div.profile-teaser.row
            div.col
                h1.name.font-weight-bold.mb-1 Rodrigo Mady
                div.tagline.mb-3 #{mainrole}
                div.bio.mb-4 #{roledescription}
                div.mb-4
                    a.btn.btn-primary.me-2.mb-3(href="portfolio.html")
                        i.fa.fa-code.text-light
                        span.ml-2 #{portfolio}
                    a.btn.btn-secondary.mb-3(href="resume.html")
                        i.fa.fa-file-code-o.text-light
                        span.ml-2 #{resume} 
            div.col-md-5.col-lg-5
                img.profile-image.img-fluid.mb-3.mb-lg-0.me-md-0(src="/images/profile2.jpg")